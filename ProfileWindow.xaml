<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ConverterApp.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Настройки профиля" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Label Content="Имя:"/>
                    <TextBox x:Name="txtUserName" Height="30" Margin="0,5"/>
                    <Label Content="Email:"/>
                    <TextBox x:Name="txtUserEmail" Height="30" Margin="0,5"/>
                    <Button x:Name="btnSaveProfile" Content="Сохранить" Height="30" Margin="0,5"/>
                    <Button x:Name="btnLoadProfile" Content="Загрузить" Height="30" Margin="0,5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>